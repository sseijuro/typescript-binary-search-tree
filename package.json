{
  "name": "netcracker_typescript_lab1",
  "version": "1.0.0",
  "description": "Binary Search Tree Implementation with html visualisation",
  "main": "index.js",
  "scripts": {
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "build:node": "npm run tslint && rimraf ./build && tsc",
    "build:browser": "webpack --config ./webpack.config.js --mode production",
    "start:node": "node build/index.js",
    "start:browser": "webpack serve --port 8080 --mode development",
    "all:node": "npm run build:node && npm run start:node",
    "all:browser": "npm run build:browser && npm run start:browser",
    "test": "tslint -c tslint.json 'tests/index.ts' && mocha -r ts-node/register ./tests/index.ts"
  },
  "author": "Alexandr Kozorez",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.3.4",
    "codelyzer": "^6.0.1",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^2.0.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-loader": "^3.5.4",
    "typescript": "^4.2.4",
    "typings": "^2.1.1",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  }
}
